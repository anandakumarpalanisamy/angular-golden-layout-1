{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@bundles/*": ["../../bundles/*"],
      "@lib/*": ["../../src/lib/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
